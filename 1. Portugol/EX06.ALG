Algoritmo "EX06"

// Declaração das variáveis
Var
   r, area: real  // Raio e área do círculo

Inicio

   // Lê o valor do raio
   escreva("# Digite o valor do raio do circulo: ")
   leia(r)

   // Calcula a área do círculo
   area <- pi * r * r

   // Exibe a área formatada
   escreval("# Area: ", area:3:3)

Fimalgoritmo
